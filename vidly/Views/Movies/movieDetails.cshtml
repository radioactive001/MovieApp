@model vidly.Models.Movie
@{
    ViewBag.Title = "movieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-4">
        <ul class="list-group">
            <li class="list-group-item">Genre :  @Model.Genre.Name</li>
            <li class="list-group-item">Release Date :  @Model.ReleaseDate</li>
            <li class="list-group-item">Date Added To Database :  @Model.DateAddedToDatabase</li>
            <li class="list-group-item">Number in stock :  @Model.NumberInStock</li>
            <li class="list-group-item">Number Available :  @Model.NumberAvailable</li>
        </ul>
    </div>
</div>

